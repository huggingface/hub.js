{
	"compilerOptions": {
		"esModuleInterop": true,
		"noEmit": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	},
	"include": ["src", "index.ts", "../shared/src"],
	"exclude": ["dist"]
}
